<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3399FF"
    android:fillViewport="true"
    android:orientation="vertical" >

    <include layout="@layout/header_shoppingcart" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/list_bought"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#3399FF"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/card_info"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="10sp"
                        android:text="Card Information" >
                    </TextView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin" >

                    <TextView
                        android:id="@+id/cardNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Card Number"
                        android:textSize="12sp" />
                    
                    
                    <EditText
                        android:id="@+id/card_Number"
                        android:layout_width="150dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/cardNumber"
                        android:layout_toRightOf="@+id/cardNumber"
                        android:inputType="number"
                        android:text=""
                        android:textSize="12sp" >
                    </EditText>
                 </RelativeLayout>
                 
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#3399FF"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/inputtoken"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="10sp"
                        android:text="Token Input" >
                    </TextView>
                </LinearLayout>
                 
                 <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin" >

                    <TextView
                        android:id="@+id/appli"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_alignRight="@+id/lastTen"
                        android:text="APPLI"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/appli"
                        android:layout_alignLeft="@+id/token_"
                        android:inputType="number"
                        android:text="3"
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/lastTen"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/appli"
                        android:layout_marginTop="15dp"
                        android:text="Last 10 Digits of Debit Card"
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lastTen"
                        android:layout_alignRight="@+id/lastTen"
                        android:layout_marginTop="15dp"
                        android:text="Purchase Amount"
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/tokenReq"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/amount"
                        android:layout_alignRight="@+id/lastTen"
                        android:layout_marginTop="15dp"
                        android:text="Token Request Number"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/token"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/lastTen"
                        android:layout_below="@+id/tokenReq"
                        android:layout_marginTop="15dp"
                        android:text="Challenge Token"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/token_"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/token"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/lastTen"
                        android:inputType="number"
                        android:text=""
                        android:textSize="12sp" >
                    </EditText>

                    <TextView
                        android:id="@+id/last_Ten"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/lastTen"
                        android:layout_alignLeft="@+id/token_"
                        android:inputType="number"
                        android:text=""
                        android:textSize="12sp" />
                    
                    
                    <TextView
                        android:id="@+id/input1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/lastTen"
                        android:layout_alignTop="@+id/lastTen"
                        android:layout_marginLeft="100dp"
                        android:text="Input1"
                        android:textColor="#FF0000"
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/input2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/input1"
                        android:layout_alignTop="@+id/amount"
                        android:text="Input2"
                        android:textColor="#FF0000"
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/input3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/input1"
                        android:layout_alignTop="@+id/tokenReq"
                        android:text="Input3"
                        android:textColor="#FF0000"
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/amount_"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/amount"
                        android:layout_alignLeft="@+id/token_"
                        android:inputType="number"
                        android:text=""
                        android:textSize="12sp" />
                    
                    <TextView
                        android:id="@+id/token_req"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tokenReq"
                        android:layout_alignLeft="@+id/token_"
                        android:inputType="number"
                        android:text="00000"
                        android:textSize="12sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/pay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/style_button"
                        android:text="Pay" >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
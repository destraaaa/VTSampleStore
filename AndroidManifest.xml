<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.destra.vtdummy"
    android:versionCode="13"
    android:versionName="0.7" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <!-- Permission - Internet Connect -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.destra.vtdummy.ActivitySplash"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.destra.vtdummy.ActivityHome"
            android:label="@string/title_activity_home"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="vtdummyandroid"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.destra.vtdummy.FragmentHome"
            android:label="@string/title_activity_home_fragment" >
        </activity>
        <activity
            android:name="com.destra.vtdummy.FragmentBilling"
            android:label="@string/title_activity_billing" >
        </activity>
        <activity
            android:name="com.destra.vtdummy.FragmentShipping"
            android:label="@string/title_activity_shipping_fragment" >
        </activity>
        <activity
            android:name="com.destra.vtdummy.FragmentProduct"
            android:label="@string/title_activity_fragment_checkout" >
        </activity>
        <activity
            android:name="com.destra.vtdummy.FragmentVTWeb"
            android:label="@string/title_activity_fragment_vtweb"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.destra.vtdummy.FragmentVTDirect"
            android:label="@string/title_activity_fragment_vtdirect" >
        </activity>
        <activity
            android:name="com.destra.vtdummy.FragmentCreditCard"
            android:label="@string/title_activity_fragment_credit_card" >
        </activity>
    </application>

</manifest>